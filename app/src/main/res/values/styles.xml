<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/activity_background</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:textColor">@color/app_yellow</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TextAppearance.Detail.Description" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.TextAppearance.Detail.Author" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.ExpandedTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/app_yellow</item>
    </style>

    <style name="AppTheme.TextAppearance.CollapsedTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
